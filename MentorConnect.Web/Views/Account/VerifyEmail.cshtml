@model MentorConnect.Web.ViewModels.VerifyEmailViewModel

@{
    ViewBag.Title = "Verify Email";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
        <h4>Account Verification</h4>
        @if(TempData["Error"] != null)
        {
        <div class="col-md-12 alert alert-danger">
            <span><b>Sorry!</b> - @TempData["Error"]</span>
        </div>
        }
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="VerifyEmail">
                    <input type="hidden" id="Email" name="Email" asp-for="Email"/>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Code" class="control-label">Enter your code</label>
                        <input asp-for="Code" class="form-control">
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-outline-success float right" type="submit" value="Submit"/>
                        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>